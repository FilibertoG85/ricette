<div class='row'>
  <div class='col-md-6 col-lg-6'>
    Foto
  </div>
  <div class='col-md-6 col-lg-6'>

    <%= form_for :user, method: :post, html: {class: 'form-horizontal'}  do |f| %>
      <div class="form-group">
        <label for="inputEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-10">
          <%= f.text_field :email, class: 'form-control', placeholder: "Inserisci l'email" %>
        </div>
      </div>
      <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-10">
          <%= f.password_field :password, class: 'form-control', placeholder: "Inserisci la password" %>
        </div>
      </div>
      <%= f.submit 'Accedi', class: 'btn btn-primary' %>
    <% end %>

  </div>
</div>

